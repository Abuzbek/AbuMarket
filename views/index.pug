extends layout

block content
    div(ng-controller="indexController", ng-init="init()")
        include navbar
        section.index
            .container.pt-5
                .row.pt-5
                    .col-lg-8
                        .swiper-container
                          .swiper-wrapper
                            .swiper-slide
                                img(src="./images/owl1.jpg", alt="", )
                            .swiper-slide
                                img(src="./images/owl2.png", alt="", )
                            .swiper-slide 
                                img(src="./images/owl3.png", alt="", )
                            .swiper-slide
                                img(src="./images/owl4.png", alt="", )
                            .swiper-slide
                                img(src="./images/owl5.png", alt="", )
                          .swiper-button-next
                          .swiper-button-prev
                    .col-lg-4.col-md-12.mb-4
                        // Section: Categories
                        section.section
                          ul.list-group.z-depth-1
                            li.list-group-item.d-flex.justify-content-between.align-items-center
                              a(href="#!").font-small.w-100
                                i.fas.fa-laptop.mr-2(aria-hidden='true')
                                |  Laptops
                              a(href='')
                              span.badge.badge-danger.badge-pill 43
                            li.list-group-item.d-flex.justify-content-between.align-items-center
                              a(href="#!").font-small.w-100
                                i.fas.fa-mobile-alt.mr-3(aria-hidden='true')
                                |  Smartphone
                              span.badge.badge-danger.badge-pill 32
                            li.list-group-item.d-flex.justify-content-between.align-items-center
                              a(href="#!").font-small.w-100
                                i.fas.fa-tablet-alt.mr-3(aria-hidden='true')
                                |  Tablet
                              span.badge.badge-danger.badge-pill 18
                            li.list-group-item.d-flex.justify-content-between.align-items-center
                              a(href="#!").font-small.w-100
                                i.fas.fa-headphones-alt.mr-3(aria-hidden='true')
                                | Heahphones
                              span.badge.badge-danger.badge-pill 37
                            li.list-group-item.d-flex.justify-content-between.align-items-center
                              a(href="#!").font-small.w-100
                                i.fas.fa-camera-retro.mr-3(aria-hidden='true')
                                | Camera
                              span.badge.badge-danger.badge-pill 15
                            li.list-group-item.d-flex.justify-content-between.align-items-center
                              a(href="#!").font-small.w-100
                                i.fas.fa-suitcase.mr-3(aria-hidden='true')
                                | Accesories
                              span.badge.badge-danger.badge-pill 64
                            li.list-group-item.d-flex.justify-content-between.align-items-center
                              a(href="#!").font-small.w-100
                                i.fas.fa-tv.mr-3(aria-hidden='true')
                                | TV
                              span.badge.badge-danger.badge-pill 2
                        // Section: Categories
 
            .container-fluid                
                .row
                    .sectionCards.slick-card.w-100
                        div.slick-item
                            include ./cards/cards.pug
                        div.slick-item
                            include ./cards/cards.pug
                        div.slick-item
                            include ./cards/cards.pug
                        div.slick-item
                            include ./cards/cards.pug
            .container
                .row
                    .col-12.mb-4
                        // Image
                        .view.zoom.z-depth-1.waves-effect
                          img.img-fluid(src='https://images.samsung.com/ru/smartphones/galaxy-z-flip/buy/carousel/0-Bloom-Black-Purple-Family-1-PC-img.jpg', alt='sample image')
                          .mask.rgba-black-strong
                            .white-text.text-right.pt-lg-5.pt-md-1.mr-5.pr-md-4.pr-0
                              div
                                a
                                  span.badge.badge-dark SALE
                                h2.card-title.font-weight-bold.pt-md-3.pt-1
                                  strong
                                    | Barcha smartfonlar 20% li chegirmada
                                p.pb-lg-3.pb-md-1.clearfix.d-none.d-md-block 
                                 |Bu imkon faqat 1 marotaba bo'ladi foydanib qolinglar
                                a.btn.mr-0.btn-elegant.btn-rounded.clearfix.d-none.d-md-inline-block.waves-effect.waves-light Read more
                        // Image
                    
                    .col-md-8.mb-4
                        // Image
                        .view.zoom.z-depth-1.waves-effect
                          img.img-fluid(src='https://mdbootstrap.com/img/Photos/Others/product1.jpg', alt='sample image')
                          .mask.rgba-white-light
                            .dark-grey-text.d-flex.align-items-center.pt-4.ml-lg-3.pl-lg-3.pl-md-5
                              div
                                a
                                  span.badge.badge-primary best rated
                                h2.card-title.pt-md-3.pt-1
                                  strong
                                    | Bizdagi texnikalar eng zo'ri deb baholangan
                                p.pb-lg-3.pb-md-1.clearfix.d-none.d-md-block 
                                 | Eng zo'r mahsulotlardan siz ham quruq qolmang
                                a.btn.mr-0.btn-primary.btn-rounded.clearfix.d-none.d-md-inline-block.waves-effect.waves-light Read more
                        // Image    
                    .col-md-4.mb-4
                        // Image
                        .view.zoom.z-depth-1.waves-effect
                          img.img-fluid(src='https://lh3.googleusercontent.com/proxy/ZE-pGIwttnOVqJTQ1oBOS6JkugD0l_Z6a7LvHq2VHjV7RSmhNr-6Gkz1oI4eG-gjZWbchbCENux2HhbZisWsE1IjYJY5k4rSzj9AtUkWufn6lq9kXDfcOtEiHNwmeQ', alt='sample image')
                          .mask.rgba-black-light
                            .white-text.d-flex.align-items-center.justify-content-center.pt-4.ml-lg-3
                              div.text-center
                                a
                                  span.badge.badge-primary NEW
                                h2.card-title.pt-md-3.pt-1
                                  strong
                                    | Eng yangi mahsulot
                                p.pb-lg-3.pb-md-1.clearfix.d-none.d-md-block 
                                 | Ko'ring va baho bering
                                a.btn.mr-0.btn-primary.btn-rounded.clearfix.d-none.d-md-inline-block.waves-effect.waves-light Read more
                        // Image        

            .container
                .row
                  each cards in card
                    .col-lg-3.col-md-4.col-6.mb-4
                        .card.card-ecommerce
                              // Card image
                              .view.overlay
                                img.img-fluid(src=`/images/${cards.img}`, alt='')
                                a(href='/product/'+cards._id)
                                  .mask.rgba-white-slight.waves-effect.waves-light
                              // Card image
                              // Card content
                              .card-body
                                // Category & Title
                                h5.card-title.mb-1
                                  strong
                                    a.dark-grey-text(href='/product/'+cards._id) #{cards.name}
                                span.badge.badge-danger.mb-2 #{cards.feature}
                                if cards.sale
                                    span.badge.badge-success.mb-2.ml-2
                                     | SALE
                                // Rating
                                .progress.md-progress(style='height: 30px;')
                                    .progress-bar.progress-bar-striped.gradientOverflow(role='progressbar', style=`width: 
                                    ${cards.imb_score}0%; height: 30px`,aria-valuenow=`${cards.imb_score}0`, aria-valuemin='0', aria-valuemax='100') 
                                        i.fas.fa-star.Textgradient
                                        i.fas.fa-star.Textgradient
                                        i.fas.fa-star.Textgradient
                                        i.fas.fa-star.Textgradient
                                        i.fas.fa-star.Textgradient

                                // Card footer
                                if !cards.sale
                                    .card-footer.pb-0
                                      .row.mb-0
                                        span.float-left
                                          strong #{cards.money}
                                        span.float-right
                                          a(data-toggle='tooltip', data-placement='top', title='',                          data-original-title='Add to Cart')
                                            i.fas.fa-shopping-cart.ml-3
                                if cards.sale
                                    .card-footer.pb-0
                                        .row.mb-0
                                          h5.mb-0.pb-0.mt-1.font-weight-bold
                                            span.red-text
                                              strong #{cards.sale}
                                            span.grey-text
                                              small.text-line-through
                                                s #{cards.money}
                                          span.float-right
                                            a(data-toggle='tooltip', data-placement='top', title='', data-original-title='Add to Cart')
                                              i.fas.fa-shopping-cart.ml-3           
                            
        include ./section/footer.pug                